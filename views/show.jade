html
  head
    title #{title} - Inkworthy
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora|Roboto|Open+Sans', type='text/css')
    link(rel='stylesheet', href='/css/foundation.min.css' type='text/css')
