    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")

  body
    div#nav.fullWidth
      h3 Inkworthy

    div.row
      div.small-10.columns
        h1= title
        if authors
          strong= authors
        else
          strong= publication.name
          em &nbsp; &nbsp; Vol. #{volume} Ed. #{number}

      div.small-2.columns
        span.label Words: #{analytics.word_count}
        span.label Pages: #{analytics.page_range}

    div.row
